---
import Hamburger from '../components/Hamburger.astro';
import Navigation from '../components/Navigation.astro';
---
<header>
    <nav>
        <Hamburger />
        <Navigation />
    </nav>
</header>
<style>
    header {
        background-color: #f8f9fa;
        padding: 1rem;
        border-bottom: 1px solid #dee2e6;
    }
    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }